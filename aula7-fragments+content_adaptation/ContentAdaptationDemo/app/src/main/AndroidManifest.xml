<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ufabc.padm.contentadaptation" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.edu.ufabc.padm.contentadaptation.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.edu.ufabc.padm.contentadaptation.StaticFragmentActivity"
            android:label="@string/title_activity_static_fragment" >
        </activity>
        <activity
            android:name="br.edu.ufabc.padm.contentadaptation.DynamicFragmentsActivity"
            android:label="@string/title_activity_dynamic_fragments" >
        </activity>
        <activity
            android:name="br.edu.ufabc.padm.contentadaptation.DeviceDetectionActivityDeclarative"
            android:label="@string/title_activity_device_detection" >
        </activity>
        <activity
            android:name="br.edu.ufabc.padm.contentadaptation.DeviceDetectionActivityImperative"
            android:label="@string/title_activity_device_detection" >
        </activity>
    </application>

</manifest>
